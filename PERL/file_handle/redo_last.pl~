#!/usr/bin/perl
use strict;
use warnings;
#1. redo
my $a=0;
  while($a < 100)
 {
  $a = $a + 10;

 redo if($a <= 50);
  print("$a\n");
 }

#2. next
my $b = 25;
  while($b < 30){
  if($b == 27){
 print "inside if $b\n";
   $b = $b + 1;
   next;
   }
   print "value of a1: $b\n";
   $b = $b + 1;
   }

#3. last:
my $x = 30;
while($x < 35)
{
if($x == 32)
{
last;
}
print("value of x: $x \n");
$x +=1;
}
